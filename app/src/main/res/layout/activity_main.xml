<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Status Layout (Offline Dot) -->
    <LinearLayout
        android:id="@+id/statusLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/status_pill_bg"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Pulsing Dot -->
        <View
            android:id="@+id/dotStatus"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/status_dot_red" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnected"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Main CardView for payment animations -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLottieWrapper"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <!-- Transaction Amount (hidden by default) -->
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: $0.00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/lottieCardWait"
                app:layout_constraintStart_toStartOf="@id/lottieCardWait"
                app:layout_constraintEnd_toEndOf="@id/lottieCardWait"
                app:layout_constraintBottom_toTopOf="@id/tvCenterStatus"
                app:layout_constraintVertical_bias="0.2"/>

            <!-- Card Animation (The main blue card visual) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieCardWait"
                android:layout_width="250dp"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:lottie_autoPlay="false"
                app:lottie_fileName="payment_wait.json"
                app:lottie_loop="true" />

            <!-- Chip Animation (Inside the Card) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieChip"
                android:layout_width="29dp"
                android:layout_height="21dp"
                android:layout_marginTop="44dp"
                app:layout_constraintEnd_toEndOf="@id/lottieCardWait"
                app:layout_constraintHorizontal_bias="0.361"
                app:layout_constraintStart_toStartOf="@id/lottieCardWait"
                app:layout_constraintTop_toTopOf="@id/lottieCardWait"
                app:lottie_autoPlay="true"
                app:lottie_fileName="chip_standalone.json"
                app:lottie_loop="false" />

            <!-- Spinner Animation (Centered on the Card) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieSpinner"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCenterStatus"
                app:layout_constraintEnd_toEndOf="@id/lottieCardWait"
                app:layout_constraintStart_toStartOf="@id/lottieCardWait"
                app:layout_constraintTop_toTopOf="@id/lottieCardWait"
                app:lottie_autoPlay="true"
                app:lottie_fileName="spinner_standalone.json"
                app:lottie_loop="true" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieThreeDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/lottieCardWait"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:lottie_fileName="dots_standalone.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <!-- Status Text (Below the Card) -->
            <TextView
                android:id="@+id/tvCenterStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting for payment"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/lottieCardWait" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
